{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Gestion SubCategory
{% endblock %}

{% block body %}






    <table class="table table-primary table-striped">
        <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">subCategory</th>


        </tr>

        </thead>
        <tbody>

        {% for subCategory in subCategories %}
            <tr>
                <th scope="row">{{ subCategory.id }}</th>

                <td>{{ subCategory.category.title | default ('<span
                        style="color:red;"Aucune categorie affiché</span>')   |upper | raw}}</td>
                <td>{{ subCategory.title }}€</td>
                <td><img src="{{ asset('upload/')~subCtegory.picture }}" width="100" alt=""></td>
                <td><a href="{{ path('editSubCategory', {'id': subCategory.id}) }}" class="btn btn-info">Modifier</a>
                    <a href="{{ path('deleteSubCategory', {'id': subCategory.id}) }}" onclick="return confirm('Etes-vous sûr?')" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>









{% endblock %}

